# Environment Configuration
NODE_ENV=development

# Performance Monitoring
ANALYZE=false
BUNDLE_ANALYZE=false

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=nsgm_db

# Login Configuration  
LOGIN_USERNAME=admin
LOGIN_PASSWORD_HASH=$2b$10$example_bcrypt_hash_here
# You can generate hash using: node -e "console.log(require('bcrypt').hashSync('your_password', 10))"

# Server Configuration
SERVER_HOST=localhost
SERVER_PORT=3000
SERVER_PROTOCOL=http

# Application Configuration
APP_PREFIX=
APP_VERSION=2.0.26

# CSRF Protection and Security Configuration
# Session secret key for CSRF protection - CHANGE THIS IN PRODUCTION!
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Allowed origins for CORS (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Security Settings
SECURE_COOKIES=false
HTTPS_ONLY=false
